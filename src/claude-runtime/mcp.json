{
    "mcpServers": {
        "arxiv": {
            "command": "uv",
            "args": [
                "tool",
                "run",
                "arxiv-mcp-server",
                "--storage-path", "/tmp/arxiv-papers"
            ],
            "type": "stdio"
        }
    },
    "_comment": "ArXiv MCP server requires uv (Python package manager). Install with: uv tool install arxiv-mcp-server"
}
