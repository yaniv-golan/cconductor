{
  "termination": {
    "confidence_threshold": 0.85,
    "max_iterations": 10,
    "max_tasks": 50,
    "stagnation_threshold_iterations": 2,
    "time_budget_minutes": 60,
    "interactive_mode": false,
    "allow_user_guidance": true
  },

  "recommendations": {
    "enabled": true,
    "recommend_iteration_increase": true,
    "recommend_exploration_mode_change": true,
    "iteration_increase_threshold": {
      "min_confidence_gain_expected": 0.10,
      "min_unresolved_gaps": 3,
      "min_gap_priority": 7
    },
    "aggressive_mode_threshold": {
      "complex_topic_indicators": 5,
      "cross_domain_connections": 3,
      "high_citation_density": true
    }
  },

  "task_generation": {
    "min_gap_priority": 6,
    "min_lead_priority": 6,
    "always_investigate_contradictions": true,
    "max_tasks_per_iteration": 5,
    "exploration_mode": "balanced"
  },

  "exploration_modes": {
    "conservative": {
      "description": "Fewer tasks, higher thresholds, stops early. Best for simple queries or time constraints.",
      "min_gap_priority": 8,
      "min_lead_priority": 8,
      "max_tasks_per_iteration": 3,
      "confidence_threshold": 0.82,
      "follow_citation_depth": 1
    },
    "balanced": {
      "description": "Default mode. Moderate exploration, good quality/time tradeoff.",
      "min_gap_priority": 6,
      "min_lead_priority": 6,
      "max_tasks_per_iteration": 5,
      "confidence_threshold": 0.85,
      "follow_citation_depth": 2
    },
    "aggressive": {
      "description": "Deep exploration, follows many leads. Best for complex topics or comprehensive reviews.",
      "min_gap_priority": 4,
      "min_lead_priority": 4,
      "max_tasks_per_iteration": 8,
      "confidence_threshold": 0.88,
      "follow_citation_depth": 3
    }
  },

  "interactive_mode": {
    "enabled": false,
    "prompt_after_each_iteration": true,
    "show_knowledge_graph_summary": true,
    "show_pending_tasks": true,
    "allow_task_injection": true,
    "allow_priority_override": true,
    "allow_exploration_mode_change": true,
    "user_input_options": [
      "continue",
      "stop",
      "add_task",
      "change_priority",
      "change_exploration_mode",
      "show_details",
      "adjust_focus"
    ]
  },

  "user_guidance": {
    "prompt_template": "Iteration {iteration} complete. Confidence: {confidence:.2f}\n\nSummary:\n- Entities: {entities}\n- Claims: {claims}\n- Gaps: {gaps_count} ({high_priority_gaps} high-priority)\n- Contradictions: {contradictions}\n- Pending tasks: {pending_tasks}\n\nOptions:\n  [c] Continue\n  [s] Stop and synthesize now\n  [a] Add a research task\n  [p] Change task priorities\n  [m] Switch exploration mode (current: {mode})\n  [d] Show detailed knowledge graph\n  [f] Adjust research focus\n\nYour input (or Enter to continue): ",

    "recommendations_template": "\nCoordinator Recommendations:\n{recommendations}\n"
  },

  "limits": {
    "max_entities": 200,
    "max_claims": 500,
    "max_relationships": 300,
    "max_gaps": 50,
    "max_contradictions": 20,
    "max_leads": 30
  },

  "logging": {
    "level": "info",
    "log_knowledge_graph_updates": true,
    "log_task_generation": true,
    "log_coordinator_reasoning": true,
    "detailed_confidence_logging": true
  },

  "performance": {
    "parallel_agents": 3,
    "coordinator_check_interval_seconds": 30,
    "async_mode": true,
    "cache_coordinator_context": true
  }
}
