{
  "modes": {
    "default": {
      "name": "General Research",
      "description": "Comprehensive research on any topic using web sources",
      "agents": [
        "research-planner",
        "web-researcher",
        "code-analyzer",
        "synthesis-agent",
        "fact-checker"
      ],
      "output_format": "markdown",
      "clarification_required": true
    },
    "scientific": {
      "name": "Scientific Literature Review",
      "description": "Academic research with full PDF analysis, peer review assessment, and methodology evaluation",
      "agents": [
        "research-planner",
        "academic-researcher",
        "pdf-analyzer",
        "synthesis-agent",
        "fact-checker"
      ],
      "output_format": "scientific-report",
      "clarification_required": true,
      "pdf_centric": true,
      "special_instructions": {
        "academic_researcher": {
          "always_fetch_pdfs": true,
          "min_papers": 10,
          "prioritize_peer_reviewed": true,
          "track_citations": true,
          "extract_methodology": true
        },
        "pdf_analyzer": {
          "deep_analysis": true,
          "extract_figures": true,
          "extract_statistics": true,
          "identify_limitations": true
        },
        "synthesis_agent": {
          "format": "literature_review",
          "include_methodology_comparison": true,
          "include_timeline": true,
          "identify_gaps": true,
          "assess_consensus": true
        },
        "fact_checker": {
          "verify_statistics": true,
          "cross_reference_papers": true,
          "check_retractions": true
        }
      },
      "quality_requirements": {
        "min_peer_reviewed_sources": 5,
        "min_total_papers": 10,
        "max_preprint_reliance": 0.3,
        "require_recent_papers": true,
        "recent_cutoff_years": 3
      }
    },
    "business": {
      "name": "Business & Market Analysis",
      "description": "Comprehensive business research with market sizing, competitive landscape, and financial analysis",
      "agents": [
        "research-planner",
        "web-researcher",
        "market-analyzer",
        "competitor-analyzer",
        "financial-extractor",
        "synthesis-agent",
        "fact-checker"
      ],
      "output_format": "business-memo",
      "clarification_required": true,
      "special_instructions": {
        "market_analyzer": {
          "calculate_tam_sam_som": true,
          "find_growth_rates": true,
          "identify_trends": true
        },
        "competitor_analyzer": {
          "min_competitors": 5,
          "compare_positioning": true,
          "analyze_market_position": true
        },
        "financial_extractor": {
          "find_disclosed_data": true,
          "note_estimates_separately": true,
          "validate_financial_claims": true
        },
        "synthesis_agent": {
          "format": "business_memo",
          "include_tam_sam_som": true,
          "include_competitive_matrix": true,
          "assess_market_dynamics": true
        }
      }
    },
    "technical": {
      "name": "Technical Deep Dive",
      "description": "Technical architecture research with code analysis and implementation details",
      "agents": [
        "research-planner",
        "web-researcher",
        "code-analyzer",
        "synthesis-agent",
        "fact-checker"
      ],
      "output_format": "markdown",
      "clarification_required": true,
      "special_instructions": {
        "web_researcher": {
          "prioritize_official_docs": true,
          "find_code_examples": true,
          "track_versions": true
        },
        "code_analyzer": {
          "deep_dive": true,
          "extract_architecture": true,
          "find_implementation_patterns": true,
          "note_performance_characteristics": true
        },
        "synthesis_agent": {
          "include_architecture_diagrams": true,
          "include_code_examples": true,
          "explain_tradeoffs": true
        }
      }
    },
    "literature_review": {
      "name": "Comprehensive Literature Review",
      "description": "Academic literature review with citation network analysis, temporal trends, and systematic synthesis",
      "agents": [
        "research-planner",
        "academic-researcher",
        "pdf-analyzer",
        "synthesis-agent",
        "fact-checker"
      ],
      "output_format": "literature-review",
      "clarification_required": true,
      "pdf_centric": true,
      "special_instructions": {
        "research_planner": {
          "define_inclusion_criteria": true,
          "define_exclusion_criteria": true,
          "specify_databases": ["arxiv", "pubmed", "semantic_scholar", "google_scholar"],
          "specify_timeframe": true
        },
        "academic_researcher": {
          "systematic_search": true,
          "always_fetch_pdfs": true,
          "min_papers": 20,
          "track_citation_network": true,
          "identify_seminal_papers": true,
          "identify_recent_advances": true,
          "extract_full_methodology": true,
          "categorize_by_approach": true
        },
        "pdf_analyzer": {
          "batch_mode": true,
          "extract_all_sections": true,
          "extract_figures_and_tables": true,
          "extract_key_statistics": true,
          "assess_quality": true,
          "identify_limitations": true
        },
        "synthesis_agent": {
          "format": "systematic_literature_review",
          "sections": [
            "Abstract",
            "Introduction and Background",
            "Search Methodology",
            "Inclusion/Exclusion Criteria",
            "Literature Overview",
            "Thematic Analysis",
            "Methodological Comparison",
            "Key Findings Synthesis",
            "Temporal Trends",
            "Citation Network Analysis",
            "Research Gaps",
            "Limitations of Current Literature",
            "Future Research Directions",
            "Conclusion",
            "References"
          ],
          "create_summary_tables": true,
          "create_timeline": true,
          "assess_consensus": true,
          "identify_controversies": true,
          "quantitative_synthesis": true
        },
        "fact_checker": {
          "verify_all_citations": true,
          "cross_reference_claims": true,
          "check_retractions": true,
          "verify_statistics": true,
          "note_conflicts": true
        }
      },
      "quality_requirements": {
        "min_peer_reviewed_sources": 15,
        "min_total_papers": 20,
        "max_preprint_reliance": 0.25,
        "require_seminal_papers": true,
        "require_recent_papers": true,
        "recent_cutoff_years": 2,
        "min_citation_tracking_depth": 2,
        "require_methodological_diversity": true
      },
      "output_requirements": {
        "include_prisma_flow": false,
        "include_summary_tables": true,
        "include_timeline": true,
        "include_citation_map": true,
        "word_count_target": 5000,
        "reference_count_min": 20
      }
    }
  },
  "mode_selection": {
    "auto_detect_keywords": {
      "scientific": ["paper", "study", "research", "peer-reviewed", "literature", "methodology", "hypothesis"],
      "business": ["market size", "TAM", "SAM", "competitors", "market analysis", "business analysis", "industry analysis"],
      "technical": ["implementation", "architecture", "how does", "code", "algorithm", "system design"],
      "literature_review": ["literature review", "systematic review", "meta-analysis", "research landscape", "state of the art"]
    },
    "default_mode": "default"
  },
  "usage": {
    "cli": "research-wrapper.sh --mode literature_review \"Recent advances in transformer architectures\"",
    "config": "Set RESEARCH_MODE environment variable",
    "interactive": "System will suggest mode based on question, user can override"
  }
}
