{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "artifact://domain-heuristics/profile@v1",
  "title": "Domain Heuristics Profile",
  "type": "object",
  "required": [
    "domain",
    "analysis_timestamp",
    "stakeholder_categories",
    "freshness_requirements",
    "watch_topics",
    "synthesis_guidance"
  ],
  "properties": {
    "domain": {
      "type": "string",
      "minLength": 1
    },
    "analysis_timestamp": {
      "type": "string"
    },
    "stakeholder_categories": {
      "type": "object",
      "minProperties": 1
    },
    "freshness_requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["topic", "topic_keywords", "max_age_days"],
        "properties": {
          "topic": {"type": "string"},
          "topic_keywords": {
            "type": "array",
            "items": {"type": "string"}
          },
          "max_age_days": {"type": "integer", "minimum": 0}
        },
        "additionalProperties": true
      }
    },
    "watch_topics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "canonical"],
        "properties": {
          "id": {"type": "string"},
          "canonical": {"type": "string"}
        },
        "additionalProperties": true
      }
    },
    "synthesis_guidance": {
      "type": "object",
      "required": ["required_sections", "tone"],
      "properties": {
        "required_sections": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string"}
        },
        "tone": {"type": "string"}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
