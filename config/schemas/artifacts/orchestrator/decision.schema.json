{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "artifact://orchestrator/decision@v1",
  "title": "Mission Orchestrator Decision",
  "description": "Structured decision payload emitted by the mission orchestrator.",
  "type": "object",
  "required": ["action", "reasoning"],
  "properties": {
    "action": {
      "type": "string",
      "enum": ["invoke", "reinvoke", "handoff", "early_exit"]
    },
    "reasoning": {
      "type": "object",
      "required": [
        "synthesis_approach",
        "gap_prioritization",
        "key_insights",
        "strategic_decisions"
      ],
      "properties": {
        "synthesis_approach": {
          "type": "string",
          "minLength": 1
        },
        "gap_prioritization": {
          "type": "string",
          "minLength": 1
        },
        "key_insights": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        },
        "strategic_decisions": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        }
      },
      "additionalProperties": true
    },
    "agent": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9\\-]*$"
    },
    "task": {
      "type": "string",
      "minLength": 1
    },
    "context": {
      "type": "string"
    },
    "input_artifacts": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "attempt": {
      "type": "integer",
      "minimum": 1
    },
    "rationale": {
      "type": "string"
    },
    "alternatives_considered": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "expected_impact": {
      "type": "string"
    },
    "constraints": {
      "type": "object",
      "additionalProperties": true
    },
    "reason": {
      "type": "string"
    },
    "refinements": {
      "type": "string"
    },
    "from_agent": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9\\-]*$"
    },
    "to_agent": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9\\-]*$"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "evidence": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    }
  },
  "additionalProperties": true,
  "allOf": [
    {
      "if": {
        "properties": {
          "action": {
            "const": "invoke"
          }
        }
      },
      "then": {
        "required": ["agent", "task"]
      }
    },
    {
      "if": {
        "properties": {
          "action": {
            "const": "reinvoke"
          }
        }
      },
      "then": {
        "required": ["agent", "reason", "refinements"]
      }
    },
    {
      "if": {
        "properties": {
          "action": {
            "const": "handoff"
          }
        }
      },
      "then": {
        "required": ["from_agent", "to_agent", "task"]
      }
    },
    {
      "if": {
        "properties": {
          "action": {
            "const": "early_exit"
          }
        }
      },
      "then": {
        "required": ["reason"]
      }
    }
  ]
}
